<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_probation_period_settings_form" model="ir.ui.view">
            <field name="name">Probation Period Settings</field>
            <field name="model">hr.employee.probation.period.settings</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="value" />
                            <field name="unit" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_probation_period_settings_tree" model="ir.ui.view">
            <field name="name">Probation Period Setting</field>
            <field name="model">hr.employee.probation.period.settings</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="value" />
                    <field name="unit" />
                </tree>
            </field>
        </record>

        <record id="action_hr_employee_probation_period_settings_type" model="ir.actions.act_window">
            <field name="name">Probation Period Settings</field>
            <field name="res_model">hr.employee.probation.period.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create the probation period here!!!
                </p>
            </field>
        </record>

        <menuitem id="menu__probation_period_settings_type"
              name="Probation Period"
              action="action_hr_employee_probation_period_settings_type"
              parent="hr.menu_human_resources_configuration"
              sequence="3"/>
    </data>
</odoo>