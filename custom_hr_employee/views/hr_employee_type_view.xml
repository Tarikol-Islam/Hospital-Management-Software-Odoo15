<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="view_hr_employee_type_form" model="ir.ui.view">
            <field name="name">Employee Type</field>
            <field name="model">hr.employee.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="type_name" />
                            <field name="is_permanent" />
                            <field name="is_probation" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="view_hr_employee_type_tree" model="ir.ui.view">
            <field name="name">Employee Type</field>
            <field name="model">hr.employee.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type_name" />
                    <field name="is_permanent" />
                    <field name="is_probation"/>
                </tree>
            </field>
        </record>


        <record id="action_hr_employee_type" model="ir.actions.act_window">
        <field name="name">Employee Type</field>
        <field name="res_model">hr.employee.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smilling_face">
                Create the employee type here!!!
            </p>
        </field>
    </record>


    <menuitem id="menu_hr_employee_type"
              name="Employee Type"
              action="action_hr_employee_type"
              parent="hr.menu_human_resources_configuration"
              sequence="2"/>

    <record id="view_inherited_hr_employee_form" model="ir.ui.view">
        <field name="name">inherited.hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="after">
                       <field name="joining_date"/>
                       <field name="employee_type_id"/>
                       <field name="probation_period_id"/>
                       <field name="confirmation_date"/>
                </xpath>
        </field>
    </record>


    </data>
</odoo>
